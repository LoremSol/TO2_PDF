<odoo>
    <data>
        <record id="to2_view_order_form" model="ir.ui.view">
            <field name="name">res.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button
                        name="save_report_as_attachment"
                        type="object"
                        string="Print and Save Order Report"
                        class="btn-primary" />
                </xpath>

                <xpath expr="//page[@name='customer_signature']" position="after">
                    <page groups="base.group_no_one" string="Attached Documents"
                        name="attached_documents">
                        <group>
                            <field name="attachment_ids" widget="attachment" options="{'multiple': true}" >
                                <tree editable="bottom">
                                    <field name="name" string="Document Name" />
                                    <field name="mimetype" />
                                    <field name="description" string="Description" />
                                    <button
                                        name="" type="object"
                                        string="Print and Save Order Report" class="btn-primary" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>